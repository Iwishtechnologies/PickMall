<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:id="@+id/shimmer"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_coupens"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:padding="20dp"
                android:layout_height="match_parent">

                <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/icon"
                    android:src="@drawable/female_icom"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_height="match_parent">

            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fonttype="light"
                android:id="@+id/title"
                android:textSize="15dp"
                android:text="OyO Voucher"/>
            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fonttype="light"
                android:id="@+id/subtitle"
                android:textSize="12dp"
                android:text="OYO Hotel Voucher"/>


            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fonttype="light"
                android:id="@+id/validity"
                android:layout_marginTop="2dp"
                android:textSize="10dp"
                android:text="Validity 2020-05-07"/>

            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fonttype="regular"
                android:id="@+id/terms"
                android:layout_marginTop="2dp"
                android:textSize="8dp"
                android:text="Validity 2020-05-07"/>

            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fonttype="light"
                android:paddingTop="2dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle_title_coupen"
                android:textSize="10dp"
                android:id="@+id/prize"
                android:textColor="@color/redColor"
                android:text="Prize 350 off"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:id="@+id/copy"
                    android:background="@drawable/icon_copy_code"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>