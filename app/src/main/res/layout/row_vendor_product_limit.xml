<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aap="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/splash_image"
            app:riv_border_color="@color/silderColor"
            app:riv_corner_radius="3dip"
            app:riv_mutate_background="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <tech.iwish.pickmall.extended.TextViewFont
                android:id="@+id/actual_price_flash"
                aap:fonttype="text_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="200"
                android:textColor="@color/redColor"
                android:textSize="14sp" />

            <tech.iwish.pickmall.extended.TextViewFont
                android:id="@+id/dicount_price_flash"
                aap:fonttype="text_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="2000"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>