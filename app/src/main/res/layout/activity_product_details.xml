<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/club_back_color"
    android:orientation="vertical"
    tools:context=".activity.ProductDetailsActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingBottom="7dp"
            android:weightSum="3">


            <RelativeLayout
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/bag_icon" />

                <LinearLayout
                    android:id="@+id/product_count_layout"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/card_number_circule_design"
                    android:gravity="center">

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:id="@+id/product_count_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/whiteColor"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </Toolbar>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <androidx.viewpager.widget.ViewPager

                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/image_count_design"
                    android:elevation="1dp"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:visibility="gone">

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/10" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp">


                <!--              Product                -->
                <LinearLayout
                    android:id="@+id/product_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteColor"
                    android:elevation="20dp"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="15dp">

                    <tech.iwish.pickmall.extended.TextViewFont

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:fonttype="regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:text="299"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fonttype="regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:weightSum="1">

                        <tech.iwish.pickmall.extended.TextViewFont

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:text="1299"
                            android:textSize="12sp" />

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:text="50%"
                            android:textColor="@color/redColor"
                            android:textSize="10sp" />
                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--                        <tech.iwish.pickmall.extended.TextViewFont-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginStart="4dp"-->
                        <!--                            android:layout_marginEnd="5dp"-->
                        <!--                            android:gravity="center"-->
                        <!--                            android:text="2000 sold"-->
                        <!--                            android:textSize="10sp" />-->

                        <RatingBar

                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:gravity="center"
                            android:progressTint="@color/orangeColor" />

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"
                            android:gravity="center"
                            android:text="3.3"
                            android:textColor="@color/redColor"
                            android:textSize="12sp" />

                        <!--                        <tech.iwish.pickmall.extended.TextViewFont-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:gravity="center"-->
                        <!--                            android:text="(172)"-->
                        <!--                            android:textColor="@color/redColor"-->
                        <!--                            android:textSize="10sp" />-->
                    </LinearLayout>

                </LinearLayout>

                <!--           Friend Deal                      -->

                <LinearLayout
                    android:id="@+id/one_rs_main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteColor"
                    android:elevation="1dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/one_rs_design"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:weightSum="3">

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/one_rs_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:text="1"
                            android:textColor="@color/whiteColor"
                            android:textSize="40sp"
                            app:fonttype="text_semi_bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:orientation="vertical">

                            <tech.iwish.pickmall.extended.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1112 user won"
                                android:textColor="@color/whiteColor"
                                android:textSize="12sp"
                                app:fonttype="regular" />

                            <tech.iwish.pickmall.extended.TextViewFont
                                android:id="@+id/one_rs_dicount_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="250"
                                android:textColor="@color/whiteColor"
                                android:textSize="12sp"
                                app:fonttype="regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1.5"
                            android:gravity="end"
                            android:orientation="vertical">

                            <tech.iwish.pickmall.extended.TextViewFont
                                android:id="@+id/total_user_req"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Request 8 Users total"
                                android:textColor="@color/whiteColor"
                                android:textSize="13sp"
                                app:fonttype="regular" />

                            <tech.iwish.pickmall.extended.TextViewFont
                                android:id="@+id/new_user_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4 new user at least)"
                                android:textColor="@color/whiteColor"
                                android:textSize="13sp"
                                app:fonttype="regular" />
                        </LinearLayout>
                    </LinearLayout>

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:id="@+id/one_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="3dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingStart="4dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:fonttype="regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/one_rs_rule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/whiteColor"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:visibility="gone"
                    android:weightSum="2">

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Rules"
                        android:textSize="16sp" />

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="View all"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/whiteColor"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:paddingEnd="10dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteColor"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:weightSum="2">

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color , Size"
                        android:textColor="@color/black"
                        app:fonttype="regular" />

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:id="@+id/select_size_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawableRight="@drawable/right_arrow"
                        android:gravity="end|center"
                        android:text="Select"
                        android:textColor="@color/club_back_single_text_color"
                        android:textSize="12sp"
                        app:fonttype="regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/color_size_image_recycle_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/shop_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Store"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/save_hearth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/heart_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Like"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/add_to_card_button_design"
                android:gravity="center"
                android:text="Add to card"
                android:textColor="@color/silderColor" />

            <Button
                android:id="@+id/buy_now_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/buy_now_button_design"
                android:gravity="center"
                android:text="Buy now"
                android:textColor="@color/redColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_rs_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/one_rs_button_place_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/one_rs_design"
                android:text=""
                android:textColor="@color/whiteColor" />
        </LinearLayout>
    </RelativeLayout>

    <!--  Change design   -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_marginBottom="20dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/productImageDetailsViewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

            </LinearLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-40dp"
                android:id="@+id/main"
                android:layout_marginTop="-20dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginBottom="-30dp"
                    android:background="@drawable/bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:paddingRight="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_height="wrap_content">
                        <RatingBar
                            android:id="@+id/ratingcheck"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="5dp"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:visibility="gone"
                            android:progressTint="@color/white" />

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:background="@drawable/rating_background">

                            <tech.iwish.pickmall.extended.TextViewFont
                                android:layout_width="wrap_content"
                                android:text="4.2"
                                android:id="@+id/ratingbox"
                                app:fonttype="text_semi_bold"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/product_like" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp">

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/title_name_edit"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Men's FootWear"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:fonttype="text_semi_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <tech.iwish.pickmall.extended.TextViewFont
                                    android:id="@+id/priceEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹1924"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    app:fonttype="text_semi_bold" />

                                <tech.iwish.pickmall.extended.TextViewFont
                                    android:id="@+id/dicount_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="₹2500"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"
                                    app:fonttype="text_semi_bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <tech.iwish.pickmall.extended.TextViewFont
                                    android:id="@+id/dicount_price_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="95%"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    app:fonttype="text_semi_bold" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingLeft="30dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:id="@+id/sub_button"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/cart_minus" />

                                <tech.iwish.pickmall.extended.TextViewFont
                                    android:id="@+id/quty_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />

                                <ImageView
                                    android:id="@+id/add_button"
                                    android:layout_width="40dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/cart_plus" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <Button
                                        android:id="@+id/add_card_btn"
                                        android:layout_width="120dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/add_to_cart" />
                                    <Button
                                        android:id="@+id/go_to_card"
                                        android:layout_width="120dp"
                                        android:layout_height="30dp"
                                        android:visibility="gone"
                                        android:background="@drawable/go_to_card_image" />
                                    <Button
                                        android:id="@+id/friend_deal_image"
                                        android:layout_width="120dp"
                                        android:layout_height="30dp"
                                        android:visibility="gone"
                                        android:background="@drawable/continue_image" />

                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingLeft="20dp">

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Color"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            app:fonttype="text_semi_bold" />

                        <Button
                            android:id="@+id/product_colorbtn"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
