<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainproduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"

        android:background="@drawable/product_round_design"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <tech.iwish.pickmall.extended.TextViewFont
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"
                app:fonttype="text_semi_bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <tech.iwish.pickmall.extended.TextViewFont
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="255"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:fonttype="regular" />

<!--                400 + sold-->
                <tech.iwish.pickmall.extended.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:text=""
                    android:textColor="@color/black"

                    android:textSize="11sp"
                    app:fonttype="regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <tech.iwish.pickmall.extended.TextViewFont
                    android:id="@+id/discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2550"
                    android:textColor="@color/lightsilverColor"
                    android:textSize="10sp"
                    app:fonttype="text_semi_bold" />

                <tech.iwish.pickmall.extended.TextViewFont
                    android:id="@+id/per_dicount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-50%"
                    android:textColor="@color/redColor"
                    android:textSize="10sp"
                    app:fonttype="text_semi_bold" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/product_rationg"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <tech.iwish.pickmall.extended.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="(50)"
                    android:textColor="@color/redColor"
                    android:textSize="10sp"
                    android:visibility="gone"
                    app:fonttype="text_semi_bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>