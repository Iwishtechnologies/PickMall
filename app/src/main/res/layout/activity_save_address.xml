<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silderColor"
    android:orientation="vertical"
    tools:context=".activity.SaveAddressActivity">


    <RelativeLayout
        android:id="@+id/layouthide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:elevation="2dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_price_layout"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/whiteColor"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/order_progress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/whiteColor"
                        android:elevation="1dp"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/name_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vikas singh"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:fonttype="regular" />

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/full_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Vikas singh"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:fonttype="regular" />

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/city_pincode_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gwalior - 474004"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:fonttype="regular" />

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/number_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:padding="2dp"
                            android:text="8871121959"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:fonttype="regular" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/silderColor" />

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/change_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:elevation="1dp"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Change or Add Address"
                            android:textColor="@color/redColor"
                            android:textSize="16sp"
                            app:fonttype="text_semi_bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/coupon_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/whiteColor"
                        android:elevation="1dp"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:weightSum="2">

                            <tech.iwish.pickmall.extended.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coupon"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                app:fonttype="text_semi_bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/coupon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/coupon_img"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/whiteColor"
                        android:elevation="1dp"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:id="@+id/paymentoption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:weightSum="2">

                            <tech.iwish.pickmall.extended.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Option"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                app:fonttype="text_semi_bold" />

                            <tech.iwish.pickmall.extended.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="Select"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                app:fonttype="regular"/>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/whiteColor"
                        android:elevation="1dp"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/card_product_recycleview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:id="@+id/buy_now_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/whiteColor"
                                android:orientation="vertical"
                                android:paddingStart="10dp"
                                android:paddingBottom="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:orientation="vertical"
                                        android:paddingTop="10dp">

                                        <tech.iwish.pickmall.extended.TextViewFont
                                            android:id="@+id/cart_product_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:padding="2dp"
                                            android:text="Flec"
                                            android:textColor="@color/black"
                                            android:textSize="17sp"
                                            app:fonttype="light" />

                                        <tech.iwish.pickmall.extended.TextViewFont
                                            android:id="@+id/cart_product_size"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Size l"
                                            android:textSize="10sp"
                                            app:fonttype="regular" />

                                        <tech.iwish.pickmall.extended.TextViewFont
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Seller:"
                                            android:textSize="10sp"
                                            app:fonttype="regular" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="2">

                                            <tech.iwish.pickmall.extended.TextViewFont
                                                android:id="@+id/cart_product_act_amount"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="4dp"
                                                android:layout_marginEnd="3dp"
                                                android:padding="2dp"
                                                android:text="52"
                                                android:textColor="@color/black"
                                                android:textSize="20sp"
                                                app:fonttype="text_semi_bold" />

                                            <tech.iwish.pickmall.extended.TextViewFont
                                                android:id="@+id/free_one_win"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="4dp"
                                                android:layout_marginEnd="3dp"
                                                android:padding="2dp"
                                                android:text="Free"
                                                android:textColor="@color/redColor"
                                                android:textSize="16sp"
                                                app:fonttype="text_semi_bold" />

                                            <tech.iwish.pickmall.extended.TextViewFont
                                                android:id="@+id/dicount_price"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="4dp"
                                                android:layout_marginEnd="3dp"
                                                android:padding="2dp"
                                                android:text=""
                                                android:textSize="10sp"
                                                app:fonttype="regular" />

                                            <tech.iwish.pickmall.extended.TextViewFont
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="4dp"
                                                android:layout_marginEnd="3dp"
                                                android:padding="2dp"
                                                android:visibility="gone"
                                                android:text="-50"
                                                android:textColor="@color/redColor"
                                                android:textSize="10sp"
                                                app:fonttype="regular" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingTop="10dp">

                                        <ImageView
                                            android:id="@+id/card_product_image"
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center" />
                                        <LinearLayout
                                            android:id="@+id/qty_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="4dp"
                                            android:background="@drawable/qtydesign"
                                            android:gravity="end"
                                            android:orientation="horizontal"
                                            android:paddingStart="10dp"
                                            android:paddingTop="5dp"
                                            android:paddingEnd="10dp"
                                            android:paddingBottom="5dp">

                                            <tech.iwish.pickmall.extended.TextViewFont
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="QTY:"
                                                android:textColor="@color/black"
                                                android:textSize="14sp"
                                                app:fonttype="text_semi_bold" />

                                            <tech.iwish.pickmall.extended.TextViewFont
                                                android:id="@+id/product_qty"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:paddingStart="2dp"
                                                android:paddingEnd="2dp"
                                                android:text="2"
                                                android:textColor="@color/black"
                                                android:textSize="14sp"
                                                app:fonttype="text_semi_bold" />

                                        </LinearLayout>
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:background="@color/whiteColor"
            android:gravity="center"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="4dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <tech.iwish.pickmall.extended.TextViewFont
                    android:id="@+id/amount_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="20000"
                    android:textColor="@color/light_black"
                    android:textSize="18sp"
                    app:fonttype="text_semi_bold" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/place_order_btn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/redColor"
                    android:text="Place order"
                    android:textColor="@color/whiteColor"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/paymentOPtionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"/>

</RelativeLayout>



















