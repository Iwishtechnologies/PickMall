                          android:layout_marginEnd="4dp"
                          android:gravity="center"/>
                      <RatingBar

                          style="@style/Widget.AppCompat.RatingBar.Small"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:isIndicator="true"
                          android:gravity="center"
                          android:numStars="1"
