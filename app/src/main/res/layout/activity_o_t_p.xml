<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F9"
    android:gravity="center"
    tools:context=".activity.MobileNOActivity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/progress"
        android:outlineAmbientShadowColor="@color/colorAccent"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:progressTint="@color/colorAccent"
        android:indeterminateTint="@color/colorAccent"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:weightSum="2"
        android:id="@+id/mainview"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/right_shade"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/number_2"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_marginTop="80dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="-50dp"
            android:padding="30dp"
            android:background="@drawable/login_bottom_background"
            android:layout_height="250dp">

            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                app:fonttype="text_semi_bold"
                android:text="we send OTP code to varify"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/enter_mobile">

                <EditText
                    android:layout_width="match_parent"
                    android:hint="Enter OTP here "
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:backgroundTint="#FFF"
                    android:inputType="number"
                    android:maxLength="4"
                    android:id="@+id/otp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/next"
                android:textColor="@color/white"
                android:id="@+id/next"
                android:layout_height="50dp"
                />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>