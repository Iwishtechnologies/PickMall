<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_deal_linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/silder_desing"
    android:orientation="vertical"
    android:paddingEnd="2dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="1dp"
        android:background="@drawable/add_to_card_button_design">
        <tech.iwish.pickmall.extended.TextViewFont
            android:id="@+id/one_rus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/whiteColor"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:id="@+id/image_flash_sale"
            android:src="@drawable/splash_image"
            android:scaleType="fitXY"
            app:riv_border_color="@color/silderColor"
            app:riv_corner_radius="10dip"
            app:riv_border_width="1dip"
            app:riv_mutate_background="true" />

    </LinearLayout>
</RelativeLayout>