<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F9"
    android:gravity="center"
    tools:context=".activity.MobileNOActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/progress"
        android:outlineAmbientShadowColor="@color/colorAccent"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:progressTint="@color/colorAccent"
        android:indeterminateTint="@color/colorAccent"
        android:layout_centerInParent="true"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:weightSum="2"
        android:id="@+id/mainview"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/right_shade"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/number_1_icon"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_marginTop="80dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginBottom="-50dp"
            android:padding="30dp"
            android:background="@drawable/login_bottom_background"
            android:layout_height="250dp">
            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:textSize="18dp"
                android:id="@+id/error"
                android:layout_marginBottom="-20dp"
                android:textColor="#FF0000"
                app:fonttype="text_semi_bold"
                android:text=""/>

            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                app:fonttype="text_semi_bold"
               android:text="Enter mobile number &amp; login"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/enter_mobile">

                <EditText
                    android:layout_width="wrap_content"
                    android:hint="Enter mobile here "
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:backgroundTint="#FFF"
                    android:id="@+id/mobile"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:inputType="number"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/next"
                android:textColor="@color/white"
                android:id="@+id/next"
                android:layout_height="50dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="60dp"
                        android:id="@+id/google"
                        android:src="@drawable/google_plus_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <com.facebook.login.widget.LoginButton
                        android:layout_width="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:id="@+id/facebook"
                        android:layout_marginLeft="20dp"
                        android:visibility="visible"
                        android:src="@drawable/fb_icon"/>
                    <ImageView
                        android:layout_marginLeft="-75dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/fb_icon"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>