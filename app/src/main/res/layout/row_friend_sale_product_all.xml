<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/one_rs_layout">

    <LinearLayout
        android:id="@+id/start_deal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/one_rs_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/whiteColor"/>
        <tech.iwish.pickmall.extended.TextViewFont
            android:id="@+id/one_rs_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="s"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@color/black"
            android:padding="3dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:background="@color/whiteColor"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/whiteColor"
            android:weightSum="2"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">
            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requirement"
                android:layout_weight="2"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <tech.iwish.pickmall.extended.TextViewFont
                android:id="@+id/counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999+ "
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" New user"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/whiteColor"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:paddingBottom="6dp"
            android:paddingEnd="4dp">
            <tech.iwish.pickmall.extended.TextViewFont
                android:id="@+id/product_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="2"
                android:layout_gravity="center"
                app:fonttype="text_semi_bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"/>
            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start a Deal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/whiteColor"
                android:background="@color/redColor"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>