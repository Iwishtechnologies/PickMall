<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_post"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:shape_mode="circle"
                    app:stroke_color="@color/black"
                    app:stroke_width="1dp"
                    android:id="@+id/profile_image"
                    android:src="@drawable/female_icom"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <tech.iwish.pickmall.extended.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fonttype="black"
                        android:textAlignment="textStart"
                        android:id="@+id/profile_name"
                        android:textSize="20dp"
                        android:text="Rohit"/>

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAlignment="textStart"
                        app:fonttype="light"
                        android:id="@+id/feed_date"
                        android:text="30 Aug 2019"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/follow_button"
                    android:background="@drawable/follow_button" />


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">


            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#RecommendedForYou#women#Top"
                android:id="@+id/post_tag"
                android:textColor="@color/signin_color"
                android:textSize="18dp"/>
        </LinearLayout>


        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_mode="round_rect"
            android:id="@+id/post_Image"
            android:layout_margin="10dp"
            android:src="@drawable/feed_example_image"
            app:round_radius="10dp"/>


        <tech.iwish.pickmall.extended.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fonttype="light"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:id="@+id/post_comment"
            android:text="Cool Sweter In Sky"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/show_origional_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_height="wrap_content">

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_weight="1"
              android:gravity="right"
              android:layout_height="wrap_content">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/like_icon"/>
              <tech.iwish.pickmall.extended.TextViewFont
                  android:layout_width="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:id="@+id/likes"
                  android:layout_height="wrap_content"
                  android:text="1.6k"/>

          </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comment_icon"/>
                    <tech.iwish.pickmall.extended.TextViewFont
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/comment"
                        android:layout_height="wrap_content"
                        android:text="1.4k"/>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>