<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F9"
    android:gravity="center"
    tools:context=".activity.MobileNOActivity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/progress"
        android:outlineAmbientShadowColor="@color/colorAccent"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:progressTint="@color/colorAccent"
        android:indeterminateTint="@color/colorAccent"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/mainview"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/right_shade"
            android:orientation="vertical"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/number_3"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_marginTop="60dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/login_bottom_background"
            android:layout_height="250dp">


            <tech.iwish.pickmall.extended.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                app:fonttype="text_semi_bold"
                android:text="which are you one?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/otp_input_background"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/male"
                        android:src="@drawable/unselect_male"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/otp_input_background"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="150dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/female"
                        android:src="@drawable/unselect_female"/>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/finish"
                android:text="Finish"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/white"
                android:background="@drawable/finish"/>


        </LinearLayout>







    </LinearLayout>



</RelativeLayout>