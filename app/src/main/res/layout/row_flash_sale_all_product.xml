<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/flash_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/image_flash_sale"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <tech.iwish.pickmall.extended.TextViewFont
                android:id="@+id/product_name_flash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:text="Flas"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <tech.iwish.pickmall.extended.TextViewFont
                        android:id="@+id/amount_flash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="2500"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/dicount_price_flash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="2500"
                            android:textSize="12sp" />

                        <tech.iwish.pickmall.extended.TextViewFont
                            android:id="@+id/percent_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingStart="2dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:text="-50%"
                            android:textColor="@color/redColor"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_2"
                        style="@style/flashsaleprogress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:progress="50" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="bottom">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/whiteColor"
                        android:gravity="center"
                        android:background="@drawable/add_to_card_button_design"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Buy Now" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:background="@color/club_back_single_line_color" />

</LinearLayout>












