<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silderColor"
    android:orientation="vertical"
    tools:context=".activity.ProductActivity">


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_centerInParent="true"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/main"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/whiteColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/back"
                    android:src="@drawable/leftarrow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_design_product"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:paddingStart="10dp"
                        android:text="Vendor Form"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:id="@+id/business_detail"
                android:background="@drawable/rectangle_feed"
                android:layout_height="wrap_content">





                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Shop Name"
                        android:padding="25dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/name"
                        android:maxLength="30"
                        android:background="@drawable/rectangle_edittext"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Shop Type"
                        android:inputType="text"
                        android:id="@+id/type"
                        android:ems="10"
                        android:padding="25dp"
                        android:maxLength="30"
                        android:background="@drawable/rectangle_edittext"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Adddress "
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/address"
                        android:padding="25dp"
                        android:background="@drawable/rectangle_edittext"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pin-Code"
                        android:padding="25dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/pincode"
                        android:maxLength="6"
                        android:minEms="6"
                        android:background="@drawable/rectangle_edittext"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact No."
                        android:padding="25dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/mobile"
                        android:maxLength="10"
                        android:minEms="10"
                        android:background="@drawable/rectangle_edittext"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alternate Contact No."
                        android:padding="25dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/alter_mobile"
                        android:maxLength="10"
                        android:minEms="10"
                        android:background="@drawable/rectangle_edittext"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="GSTIN"
                        android:padding="25dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/gstin"
                        android:background="@drawable/rectangle_edittext"
                        />

                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apply"
                        android:textColorHint="@color/whiteColor"
                        android:id="@+id/apply"
                        android:textColor="@color/whiteColor"
                        android:background="@color/redColor"
                        />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>