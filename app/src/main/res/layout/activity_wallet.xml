<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rectangle_feed"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.WalletActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/walletpicture"
        android:layout_marginTop="-80dp"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">


        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:shape_mode="round_rect"
            android:src="@drawable/wallet_picture"/>

        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:shape_mode="round_rect"
            android:layout_marginLeft="50dp"
            android:visibility="visible"
            android:layout_marginRight="50dp"
            android:id="@+id/tap_to_refresh"
            android:src="@drawable/tag_line_wallet"/>

        <tech.iwish.pickmall.extended.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fonttype="light"
            android:visibility="gone"
            android:id="@+id/wallet"
            android:layout_marginTop="-10dp"
            android:text="Wallet Balance ( â‚¹ )"/>

        <tech.iwish.pickmall.extended.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fonttype="regular"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:visibility="gone"
            android:id="@+id/balance"
            android:textColor="@color/blue_color"
            android:text="0"/>

        <Button
            android:id="@+id/add_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="wallet add"
            android:layout_marginTop="10dp"/>

    </LinearLayout>




